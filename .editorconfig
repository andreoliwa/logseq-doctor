# see https://editorconfig.org/
root = true

[*]
# Use Unix-style newlines for most files (except Windows files, see below).
end_of_line = lf
trim_trailing_whitespace = true
indent_style = space
insert_final_newline = true
indent_size = 4
charset = utf-8

[*.{js,json,json5,yml,yaml,md,rb}]
indent_size = 2

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.tsv]
indent_style = tab

[Makefile]
indent_style = tab
